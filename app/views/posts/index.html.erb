<p style="color: green"><%= notice %></p>

<h1>Posts</h1>

<div id="posts">
  <% @posts.each do |post| %>
    <%= render post %>
    <p>
      <%= link_to "Show this post", post %>
    </p>
  <% end %>
</div>

<%= turbo_frame_tag "other_frame" do %>
  <%= link_to "New post (from other_frame - broken)", new_post_path, data: { turbo_frame: "modal", turbo_action: 'advance' } %>
<% end %>
<br>

<%= link_to "New post (not in a frame - advances)", new_post_path, data: { turbo_frame: "modal", turbo_action: 'advance' } %>
<br>

<div class="modal-dialog">
  <div class="modal-content">
    <%= turbo_frame_tag "modal" do %>
      <%= link_to "New post (from the same frame - advances)", new_post_path, data: { turbo_frame: "modal", turbo_action: 'advance' } %>
    <% end %>
  </div>
</div>
